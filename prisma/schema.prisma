generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         Int     @default(autoincrement())  @id
  name       String  @unique
  password   String
}


model Quote {
  id              Int         @default(autoincrement())    @id
  quote_text      String
  author          String
  book            String      ?
  posted_by       String
  score           Int
}